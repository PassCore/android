<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <EditText
        android:id="@+id/EdtMasterKey"
        android:maxLines="1"
        android:hint="@string/master_key"
        android:layout_marginTop="8dp"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:password="true"
        android:id="@+id/EdtPassword"
        android:maxLines="1"
        android:hint="@string/password"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:password="true"
        android:id="@+id/EdtEnhanceField"
        android:maxLines="1"
        android:hint="@string/enhance_field"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:layout_marginTop="10dp"
        android:layout_marginLeft ="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SeekBar" />
    <TextView
        android:id="@+id/TxvPasswdLength" 
        android:text="@string/length_display"
        android:layout_marginLeft ="15dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/CkbIsCharRequired"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isHard" />
    <CheckBox
        android:id="@+id/ChkIsWeakPasswd"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isShort" />
    <Button
        android:id="@+id/BtnGenerate"
        android:text="@string/generate"
        android:textStyle="bold"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/BtnClean"
        android:text="@string/clean_input"
        android:textStyle="bold"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/BtnRandom"
        android:text="@string/random"
        android:textStyle="bold"
        android:layout_marginLeft ="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/TxvVersion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center | bottom"
        android:layout_marginBottom="10dp"
    />
</LinearLayout>